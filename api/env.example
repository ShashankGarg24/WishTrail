# WishTrail API Environment Variables
# -------------------------------
# Copy this file to `.env` and fill in your values

# Server
PORT=4000
NODE_ENV=development
API_VERSION=v1
CLIENT_URL=http://localhost:5173
# Comma-separated origins for CORS allowlist (in addition to localhost):
ALLOWED_ORIGINS=http://localhost:5173,https://wishtrail.vercel.app
# Optional: comma-separated regex patterns to match origins (e.g., Vercel previews)
# Example for Vercel preview domains: ^https:\/\/wishtrail-.*-yourteam\.vercel\.app$
ALLOWED_ORIGIN_REGEX=

# Database
MONGODB_URI=mongodb://localhost:27017/wishtrail
MONGODB_URI_FEED=mongodb://localhost:27017/wishtrail_feed

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_ACCESS_EXPIRES=8h
JWT_COOKIE_EXPIRE=30

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
FROM_EMAIL=no-reply@wishtrail.app

# Redis (optional)
REDIS_URL=redis://localhost:6379
REDIS_TOKEN=
REDIS_URL_FEED=redis://localhost:6379
REDIS_TOKEN_FEED=
REDIS_URL_CHAT=redis://localhost:6379
REDIS_TOKEN_CHAT=

# File Upload Configuration
# You can configure cloud storage here if needed

# Cloudinary (for screenshot uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_UPLOAD_FOLDER=wishtrail/feedback
# Optional unsigned upload preset (if using unsigned uploads)
CLOUDINARY_UPLOAD_PRESET=

# Feedback Sheet Integration
# Provide a webhook URL that accepts JSON with keys: title, description, status, screenshotUrl, userEmail, createdAt
FEEDBACK_SHEET_WEBHOOK_URL=