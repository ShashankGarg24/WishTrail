# WishTrail API Environment Variables
# -------------------------------
# Copy this file to `.env` and fill in your values

# Server
PORT=4000
NODE_ENV=development
API_VERSION=v1
CLIENT_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/wishtrail

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
FROM_EMAIL=no-reply@wishtrail.app

# Redis (optional)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
# You can configure cloud storage here if needed

# Cloudinary (optional for image uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FEEDBACK_UPLOAD_FOLDER=wishtrail/feedback

# Feedback Sheet Integration
# Provide a webhook URL that accepts JSON with keys: title, description, status, screenshotUrl, userEmail, createdAt
FEEDBACK_SHEET_WEBHOOK_URL=